<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:padding="20dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="자판기 프로그램"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콜라 1400원"/>
            <TextView
                android:id="@+id/tv_cnt1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개 남음"/>
            <Button
                android:id="@+id/btn_order_1"
                android:text="주문"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
    />



        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사이다 800원"/>
            <TextView
                android:id="@+id/tv_cnt2"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6개 남음"/>
            <Button
                android:id="@+id/btn_order_2"
                android:text="주문"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:layout_width="wrap_content"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/tv_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미린다 700원"/>
            <TextView
                android:id="@+id/tv_cnt3"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8개 남음"/>
            <Button
                android:id="@+id/btn_order_3"
                android:text="주문"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />



        </LinearLayout>





    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/ic_launcher_background"
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>
        <TextView
            android:text="맥콜 1200원"
            android:id="@+id/tv_name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="9 개 남음"
            android:id="@+id/tv_cnt4"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_order_4"
            android:text="주문"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:maxLength="5"
            android:inputType="number"
            android:id="@+id/edt_input_money"
            android:hint="금액을 입력하세요"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_input_money"
            android:text="금액입력"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>
    <TextView
        android:id="@+id/tv_money"
        android:text="10000원"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_finish"
        android:text="잔돈반환"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>