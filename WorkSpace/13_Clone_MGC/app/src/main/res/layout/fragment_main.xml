<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainFragment"
    >

    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:id="@+id/iv_main_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_toLeftOf="@+id/iv_bell"
            android:src="@drawable/ic_barcode"
            android:layout_width="25dp"
            android:layout_height="50dp"/>

        <ImageView
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_bell"
            android:src="@drawable/ic_bell"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="-10dp"
        android:background="@drawable/rounded_edge_white"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="최수민 님"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/rounded_edge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_coffee"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="스탬프 9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_coupon"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="쿠폰 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </LinearLayout>

    <!--carousel-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.viewpager2.widget.ViewPager2
                android:layout_margin="10dp"
                android:id="@+id/imgSlider"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/rounded_edge_white"
                />

            <TextView
                android:id="@+id/tv_slider_indicator"
                android:background="@drawable/rounded_edge_black"
                android:layout_alignParentRight="true"
                android:layout_marginTop="220dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:text="1/5"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    <!--추천 메뉴 가로 리사이클러 인디케이터 추가 필요-->
        <TextView
            android:text="최수민 님을 위한 추천 메뉴"
            android:textSize="18dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recv_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <!--새소식-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
            android:text="새소식"
            android:textSize="18dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더보기"
                android:textColor="#69B4FF"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
</LinearLayout>
</ScrollView>