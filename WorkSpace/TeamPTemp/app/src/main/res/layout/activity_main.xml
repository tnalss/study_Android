<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="자판기 프로그램"
        android:textAlignment="center"
        android:textSize="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img1" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_p1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콜라" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_p1_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10개 남음" />

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_order_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문 하기" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img1" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_p2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콜라 800원" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_p2_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10개 남음" />

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_order_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문 하기" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img1" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_p3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콜라 800원" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_p3_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10개 남음" />

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_order_p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문 하기" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img1" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_p4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콜라 800원" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_p4_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10개 남음" />

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_order_p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문 하기" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:inputType="number"
            android:hint="금액을 입력하세요"
            android:id="@+id/edt_money"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액 입력"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_r_money"
        android:text="잔액 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="잔돈 반환" />

</LinearLayout>


</ScrollView>